<UserControl x:Class="Wpf.BLPmodel.Pages.OtherPages.Views.TwoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.BLPmodel.Pages.OtherPages.Views"
             mc:Ignorable="d" 
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="64*"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30" Grid.Row="0" Margin="0,10,0,0"  ><Run Text="Профиль"/></TextBlock>
        <TextBlock FontSize="30" Grid.Row="0" Margin="0,10,105,0" HorizontalAlignment="Right" ><Run Text="Уровень доступа: "/></TextBlock>
        <TextBlock FontSize="30" Grid.Row="0" Margin="0,10,0,0" HorizontalAlignment="Right" Width="100" ><Run Text="{Binding SecFlag}"/></TextBlock>
        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Введите текущий пароль" FontSize="18" />
                    <PasswordBox Name="Text_Password" Width="200" Margin="0,10,0,0"  />
                    <TextBlock Text="Введите новый пароль" FontSize="18" Margin="0,10,0,0" />
                    <PasswordBox x:Name="Text_New_Password" Width="200" Margin="0,10,0,0" />
                    <Button CommandParameter="{Binding ElementName=Text_New_Password}"  Command="{Binding ChangePasswordCommand}"  Name ="Butt_Change_Pass"  Content="Подтвердить" Margin="3,10,3,0"/>

                </StackPanel>
                <local:PasswordValidator Box1="{Binding ElementName=Text_Password}" Box2="{Binding ElementName=Text_New_Password}" Label_Err="{Binding ElementName=Label_Err}" UserName="{Binding ElementName=Labell_UserName}" Butt="{Binding ElementName=Butt_Change_Pass}"  Mode="1"/>
            </Grid>
            <Label Name="Label_Err" Content="" HorizontalAlignment="Left" Margin="110,350,0,0" VerticalAlignment="Top" Height="24" Width="470" Grid.ColumnSpan="3"/>

            <Grid Grid.Column="1">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Выберите запрашиваемый ранг дсотупа" FontSize="18" />
                    <ComboBox Width="100" Margin="0,10,0,0" HorizontalAlignment="Center"  VerticalAlignment="Center">
                        <TextBlock HorizontalAlignment="Center">1</TextBlock>
                        <TextBlock>2</TextBlock>
                        <TextBlock>3</TextBlock>
                        <TextBlock Text="4" HorizontalAlignment="Center"/>
                        <TextBlock Text="5"/>
                        <TextBlock Text="6"/>
                        <TextBlock Text="7"/>
                        <TextBlock Text="8"/>
                        <TextBlock Text="9"/>
                        <TextBlock Text="10"/>
                    </ComboBox>
                    <Button Content="Запросить уровень" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="2" Margin="40,0,0,0">






                <Button Command="{Binding GoBackCommand}" Content="Назад" HorizontalAlignment="Left" Margin="152,10,0,0" VerticalAlignment="Top" Width="65" Height="34"/>
                <Label Content="Имя: "  FontSize="18" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center"/>
                <Label Name="Labell_UserName" Content="{Binding UserName}" FontSize="18" HorizontalAlignment="Left" Margin="74,4,0,0" VerticalAlignment="Center"/>
            </Grid>


        </Grid>
    </Grid>
</UserControl>
